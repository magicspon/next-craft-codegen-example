		"eslint-plugin-react-hooks": "^4.6.0",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"postcss": "^8.4.18",
		"postcss-loader": "^7.0.1",
		"postcss-preset-env": "^7.8.2",
		"prettier": "^2.7.1",
		"storybook-addon-next-router": "^4.0.1",
		"style-loader": "^3.3.1",
		"stylelint": "^14.14.0",
		"stylelint-config-standard": "^29.0.0",
		"svg-react-loader": "^0.4.6",
		"tailwindcss": "^3.2.0",
		"tailwindcss-interaction-variants": "^5.0.0",
		"tsconfig-paths-webpack-plugin": "^4.0.0",
		"typescript": "^4.8.4",
		"uuid": "^9.0.0"
	},
	"quokka": {
		"babel": {
			"env": "test",
			"polyfill": false
		},
		"installPackageCommand": "yarn add {packageName}",
		"env": {
			"params": {
				"env": "NODE_ENV=test"
			}
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"bash -c 'yarn check-types'"
		],
		"**/*.{ts,tsx,json,js,css}": [
			"prettier --write"
		],
		"*.css": "stylelint --fix",
		"*.--write": "prettier --write"
	},
	"volta": {
		"node": "16.15.0",
		"yarn": "1.22.10"
	}
}
