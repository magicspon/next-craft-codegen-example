{
	"name": "capsulecover",
	"author": {
		"name": "David Stockley",
		"email": "hello@spon.io",
		"url": "https://spon.io"
	},
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"generate": "export NODE_TLS_REJECT_UNAUTHORIZED=0; graphql-codegen --require dotenv/config --config codegen.json dotenv_config_path=.env.local",
		"dev": "export NODE_TLS_REJECT_UNAUTHORIZED=0; concurrently \"yarn generate --watch\" \"next dev\"",
		"build": "yarn generate; next build",
		"postbuild": "next-sitemap",
		"start": "next start",
		"analyze": "ANALYZE=true yarn build",
		"check-types": "tsc --project tsconfig.json --pretty --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"coverage": "jest --coverage",
		"lint": "eslint --ignore-path .gitignore --ext .js .",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"validate": "npm run check-format && npm run lint && npm run build",
		"generate-component": "npx plop",
		"prepare": "husky install",
		"storybook": "start-storybook -p 6006 -s ./public",
		"build-storybook": "build-storybook",
		"new:component": "hygen component with-prompt",
		"new:page": "hygen page with-prompt",
		"new:context": "hygen context with-prompt",
		"new:hook": "hygen hook with-prompt"
	},
	"dependencies": {
		"@headlessui/react": "^1.7.3",
		"@heroicons/react": "^2.0.12",
		"@makotot/ghostui": "^2.0.0",
		"@mobily/ts-belt": "^3.13.1",
		"@next/bundle-analyzer": "^12.3.1",
		"@types/nprogress": "^0.2.0",
		"@types/react-portal": "^4.0.4",
		"@vime/react": "^5.3.3",
		"clsx": "^1.2.1",
		"embla-carousel": "^7.0.3",
		"embla-carousel-react": "^7.0.3",
		"framer-motion": "^7.6.1",
		"graphql": "^16.6.0",
		"graphql-request": "^5.0.0",
		"nanoid": "^4.0.0",
		"next": "12.3.1",
		"next-sitemap": "^3.1.29",
		"nprogress": "^0.2.0",
		"raf-throttle": "^2.0.5",
		"ramda": "^0.28.0",
		"react": "^18.2.0",
		"react-cookie-consent": "^8.0.1",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.38.0",
		"react-portal": "^4.2.2",
		"react-query": "^3.39.2",
		"usehooks-ts": "^2.9.1",
		"zod": "^3.19.1",
		"zustand": "^4.1.2"
	},
	"devDependencies": {
		"@babel/core": "^7.19.3",
		"@babel/preset-env": "^7.19.4",
		"@babel/preset-typescript": "^7.18.6",
		"@graphql-codegen/cli": "^2.13.7",
		"@graphql-codegen/typescript": "^2.7.4",
		"@graphql-codegen/typescript-graphql-request": "^4.5.6",
		"@graphql-codegen/typescript-operations": "^2.5.4",
		"@storybook/addon-actions": "^6.5.12",
		"@storybook/addon-essentials": "^6.5.12",
		"@storybook/addon-links": "^6.5.12",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/builder-webpack5": "^6.5.12",
		"@storybook/react": "^6.5.12",
		"@svgr/webpack": "^6.5.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.7",
		"@themosaad/tailwindcss-capsize": "^1.0.0",
		"@types/react": "^18.0.21",
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.40.1",
		"babel-loader": "^8.2.5",
		"babel-plugin-inline-react-svg": "^2.0.1",
		"babel-plugin-module-resolver": "^4.1.0",
		"concurrently": "^7.4.0",
		"dotenv": "^16.0.3",
		"eslint": "^8.25.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-next": "^12.3.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-lerna": "^2.0.0",
		"eslint-plugin-compat": "^4.0.2",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-import": "^2.26.0",
